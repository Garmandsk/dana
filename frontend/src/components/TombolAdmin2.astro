---
import { API_BE } from "astro:env/client";
const { KATA_SANDI } = import.meta.env;
const { teks } = Astro.props;
---
<!--<h1>{API_BE}</h1>-->
<!--<h1>{KATA_SANDI}</h1>-->
<!--<h1>{import.meta.env.kataSandi}</h1>-->
<form action="/verif" method="POST">
  <!-- Button trigger modal -->
  <div id="modal-container" data-password="">
    <button type="button" class="btn btn-primary mt-5" id="tombolModal" data-bs-toggle="modal" data-bs-target="#exampleModal">
      {teks}
    </button>
    
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Buktikan!</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <input id="kataSandi" class="w-100" type="text" name="kataSandi" placeholder="Kata Sandi">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
            <a class="btn btn-primary" id="btnLanjut" href={`${API_BE}/b-cookie/${KATA_SANDI}`} role="button">Lanjut</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
  import $ from "jquery";
  
  $(document).ready(function() {
    $('#kataSandi').on('input', function() {
      var inputValue = $(this).val().toLowerCase();
                
      if(inputValue === 'halo') {
        $('#btnLanjut').show();
      } else {
        $('#btnLanjut').hide();
      }
    });
  });
</script>

<style>
	
	/* 
