---
const { judulBesar } = Astro.props;
---

<h1 class="mt-3 mb-5 mx-auto">{judulBesar}</h1>

<style>

  h1{
    background: white;
    padding:8px;
    height: fit-content;
    width: fit-content;
    border-radius: 75px;
    position: relative;
  }

  @property --angle{
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }

  h1::after, h1::before{
    content: "";
    position: absolute;
    height: 100%;
    width: 105%;
    background-image: repeating-conic-gradient(from var(--angle), transparent 50%, blue);
    top:50%;
    left:50%;
    translate: -50% -50%;
    z-index: -1;
    padding: 30px;
    border-radius: 75px;
    animation: 3s spin linear infinite;
  }

  h1::before{
    filter: blue(1.5rem);
    opacity: 0.5;
  }

  @keyframes spin{
    from{
      --angle: 0deg;
    }to{
      --angle: 360deg;
    }
  }

</style>